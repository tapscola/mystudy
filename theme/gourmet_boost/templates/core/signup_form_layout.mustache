{{!
    @template core/signup_form_layout

    Example context (json):
    {
        "logourl": "https://moodle.org/logo/moodle-logo.svg",
        "sitename": "Site name",
        "formhtml": "<p>(Form html would go here)</p>"
    }
}}
<div class="auth-blocks-wrapper">

    <div class="signup-block">
        <div class="block-inner">
            <div class="block-header">
                <div class="block-title">
	                <h2 class="login-sitename"><a href="{{{ config.wwwroot }}}">{{sitename}}</a></h2>      
	                <hr>      
	            </div>
            </div>
            <div class="block-title">
                <h3 class="signup-title">{{#str}}newaccount{{/str}}</h3>
            </div>
            {{{formhtml}}}
        </div>
    </div>

</div>
